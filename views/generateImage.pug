doctype html
html
  head
    title AI Image Generation
    link(rel="stylesheet", href="/css/styles.css")  <!-- Linking to the styles.css -->
  body
    h1 AI Image Generator
    form#image-form(action="/generate-image", method="POST")
      label(for="prompt") Enter a description to generate an image:
      input(type="text" name="prompt" placeholder="A beautiful sunset over a mountain range" required)
      button(type="submit") Generate Image
    
    h2 Generated Image
    img#image-display(src="", alt="Generated Image will appear here", hidden)  <!-- Will display the image -->

    script(src="/js/scripts.js")  <!-- JavaScript for handling form submission and image display -->
